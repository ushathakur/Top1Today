{
    "manifest_version": 2,
    "name": "Top1Today",
    "version": "1.0.0",
    "icons": {
        "128": "128.png"
    },
    "background": 
        {
            "scripts": [
                "background.js"
            ],
            "persistent": true

        }
    ,
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "popup.css"
            ],
            "js":["content.js"]
        }
    ],

    "permissions": [
        "unlimitedStorage",
        "notifications",
        "activeTab",
        "tabs",
        "declarativeContent",
        "<all_urls>",
        "background"
    ],
    "browser_action": {
        "default_title": "Top1Today Extension",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "16.png",
            "32": "32.png"
        }
    }
}